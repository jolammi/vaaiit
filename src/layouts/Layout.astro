---
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="mx-auto min-h-screen bg-gradient-to-b from-slate-800 to-emerald-900 text-stone-300">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="Vaaiit.fi is dedicated to raising awareness about URL spoofing, especially in the context of Finnish elections. Learn how to recognize URL spoofing.">
		<meta name="keywords" content="Vaaiit, URL Spoofing, Finnish Elections, Internet Security, Misinformation">
		<meta name="robots" content="index, follow">
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta name="language" content="Finnish">
		<meta name="author" content="Vaaiit.fi">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="mx-3">
		<slot />
		<footer class="text-center mt-16 py-4 pb-10 fixed inset-x-0 bottom-0">
			<p class="text-lg">Jouni Lammi 2024. <a href="https://jolammi.me" class="hover:opacity-70 underline">jolammi.me</a> </p>
			<p class="text-lg">Tehty Astrolla ja Tailwindillä, Shipattu Netlifyllä.</p>
		</footer>
	</body>
</html>

